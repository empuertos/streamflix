function stopVideo() {
    const streamIframe = document.getElementById('streamIframe');
    if (streamIframe) {
        streamIframe.src = 'about:blank'; // Pinapatigil nito ang video at audio
        console.log('Video stopped.');
    }
    document.body.style.overflow = ''; // Ibalik ang scrolling ng page
}

async function loadProvider(providerName, id, type) {
    const videoLoading = document.getElementById('videoLoading');
    videoLoading.style.display = 'flex';
    
    // Halimbawa ng pag-construct ng URL base sa provider_urls.json
    // Ang {ID} ay papalitan ng TMDB o IMDb ID
    const url = `https://vidsrc.to/embed/${type}/${id}`; 
    
    const streamIframe = document.getElementById('streamIframe');
    streamIframe.src = url;
    
    streamIframe.onload = () => {
        videoLoading.style.display = 'none';
    };
}
